<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Primary form section with frequency -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Primary word (kanji) -->
            <TextView
                android:id="@+id/primaryKanjiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_color" />

            <!-- Frequency counter in top right -->
            <TextView
                android:id="@+id/frequencyCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/frequency_counter_background"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary_color"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:visibility="gone"
                android:text="100k" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Primary reading if different from kanji -->
            <TextView
                android:id="@+id/primaryReadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_secondary_color"
                android:visibility="gone" />

            <!-- Pitch accent view -->
            <com.example.kanjireader.PitchAccentView
                android:id="@+id/pitchAccentView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <!-- Primary grammar chips -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/primaryChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:singleLine="false"
                app:chipSpacing="4dp"
                app:chipSpacingHorizontal="4dp"
                app:chipSpacingVertical="4dp" />

        </LinearLayout>
        <!-- Conjugation info (if searching for conjugated form) -->
        <TextView
            android:id="@+id/conjugationInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/orange_700"
            android:visibility="gone" />

        <!-- Verb type info -->
        <TextView
            android:id="@+id/verbTypeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:textColor="@color/text_secondary_color"
            android:visibility="gone" />
        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@color/text_secondary_color"
            android:alpha="0.3" />

        <!-- Variants container -->
        <LinearLayout
            android:id="@+id/variantsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Variants will be added dynamically here -->

        </LinearLayout>

        <!-- Meanings section -->
        <TextView
            android:id="@+id/meaningsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/text_primary_color"
            android:lineSpacingMultiplier="1.2" />

    </LinearLayout>

</androidx.cardview.widget.CardView>