<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top section with kanji and details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Large Kanji Character (keep it visible) -->
            <TextView
                android:id="@+id/kanjiCharacter"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:text="見"
                android:textSize="48sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/text_primary_color"
                android:background="@color/stroke_order_background" />

            <!-- Kanji Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/kanjiMeanings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="see, look at, observe"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_color"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/onReading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On: ケン"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary_color" />

                <TextView
                    android:id="@+id/kunReading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kun: み.る"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary_color" />

                <TextView
                    android:id="@+id/radical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Radical: 見 (7)"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary_color"
                    android:layout_marginTop="4dp" />

                <com.example.kanjireader.ClickablePartsTextView
                    android:id="@+id/parts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Parts: 目, 儿"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary_color"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/strokeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Strokes: 7"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary_color"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/jlptLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JLPT: N5"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary_color" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Stroke Order Section -->
        <LinearLayout
            android:id="@+id/strokeOrderSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stroke Order:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_color"
                android:layout_marginBottom="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/stroke_order_background">
                
                <com.example.kanjireader.StrokeProgressionView
                    android:id="@+id/strokeProgressionView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />
                    
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>