<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">


        <!-- Split Screen Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Top Half: Image and OCR Text -->
            <FrameLayout
                android:id="@+id/topHalfContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/black">

                <!-- ImageView for captured image -->
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:background="@android:color/black" />

                <!-- OCR Text Container (Positioned to avoid buttons) -->
                <LinearLayout
                    android:id="@+id/ocrTextContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="80dp"
                    android:background="@android:color/white"
                    android:elevation="2dp">

            <!-- Header with title and controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/ocrTextTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700" />

                <!-- Japanese Only Toggle -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/japaneseOnlyToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="æ—¥æœ¬èªž"
                    android:textSize="14sp"
                    android:minWidth="50dp"
                    android:layout_marginEnd="12dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/teal_700"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/furiganaToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="ãµã‚ŠãŒãª"
                    android:textSize="14sp"
                    android:minWidth="50dp"
                    android:layout_marginEnd="12dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/teal_700"
                    app:strokeWidth="1dp" />

                <!-- Copy Button -->
                <ImageButton
                    android:id="@+id/copyOcrTextButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_copy"
                    android:contentDescription="Copy text"
                    android:padding="8dp" />

                <!-- Translate Button -->
                <ImageButton
                    android:id="@+id/translateOcrTextButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_translate"
                    android:contentDescription="Translate text"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Text Selection View with Drag Support -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ocr_text_background"
                >  <!-- CHANGED: Added 16dp padding inside the ScrollView -->

                <com.example.kanjireader.TextSelectionView
                    android:id="@+id/textSelectionView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp" />

            </ScrollView>

                </LinearLayout>

                <!-- Horizontal Button Container (High elevation to stay on top) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="16dp"
                    android:layout_gravity="top|end"
                    android:elevation="8dp">

                    <!-- Gallery Selection Button -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnSelectFromGallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_gallery"
                        android:contentDescription="@string/select_photo_from_gallery"
                        app:backgroundTint="@color/teal_500"
                        app:tint="@color/white"
                        app:fabSize="mini" />

                    <!-- Toggle Word List Button -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnToggleWordList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_agenda"
                        app:backgroundTint="@color/teal_500"
                        app:tint="@color/white"
                        app:fabSize="mini" />

                </LinearLayout>

            </FrameLayout>

            <!-- Bottom Half: Word Cards List -->
            <LinearLayout
                android:id="@+id/bottomHalfContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#F8F8F8">

                <!-- Word Cards Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@android:color/white"
                    android:elevation="2dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Found Words"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/teal_700" />

                    <TextView
                        android:id="@+id/wordCountBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/circular_badge_background"
                        android:gravity="center"
                        android:minWidth="28dp"
                        android:minHeight="28dp"
                        android:paddingHorizontal="8dp"
                        android:text="0"
                        android:textColor="@color/teal_900"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Word Cards RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/wordCardsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:paddingBottom="400dp"
                    android:clipToPadding="false" />

            </LinearLayout>

        </LinearLayout>

        <!-- **ENHANCED: Top Popup for Word Meanings with Better Scrolling** -->
        <LinearLayout
            android:id="@+id/topPopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:background="@drawable/bottom_sheet_background"
            android:elevation="12dp"
            android:paddingBottom="16dp"
            android:translationY="-400dp"
            android:visibility="gone"
            android:maxHeight="500dp">

            <!-- Top Handle -->
            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bottom_sheet_handle" />

            <!-- Header with selected word and close button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp">

                <TextView
                    android:id="@+id/selectedWordTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Dictionary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700" />

                <ImageButton
                    android:id="@+id/closePopupButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_close"
                    android:contentDescription="Close"
                    android:padding="4dp" />

            </RelativeLayout>

            <!-- **ENHANCED: Content Area with Better Scrolling for Multiple Results** -->
            <ScrollView
                android:id="@+id/contentScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxHeight="400dp"
                android:fillViewport="false"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- **UPDATED: Word Found - Now supports dynamic content** -->
                    <LinearLayout
                        android:id="@+id/wordFoundLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:visibility="gone">

                        <!-- **LEGACY: Keep existing views for backward compatibility** -->
                        <!-- These will be hidden when using multiple results display -->

                        <!-- Kanji Display (if available) -->
                        <TextView
                            android:id="@+id/kanjiText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="æ¼¢å­—"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:paddingVertical="16dp"
                            android:background="#F8F9FA"
                            android:layout_marginBottom="16dp"
                            android:visibility="gone" />

                        <!-- Reading Display -->
                        <TextView
                            android:id="@+id/readingText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ã²ã‚‰ãŒãª"
                            android:textSize="24sp"
                            android:textColor="@color/teal_700"
                            android:gravity="center"
                            android:paddingVertical="12dp"
                            android:layout_marginBottom="16dp" />

                        <!-- Meanings List -->
                        <TextView
                            android:id="@+id/meaningsLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Meanings:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/meaningsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="â€¢ Meaning 1\nâ€¢ Meaning 2\nâ€¢ Meaning 3"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:lineSpacingExtra="4dp"
                            android:paddingStart="8dp"
                            android:paddingBottom="16dp" />

                        <!-- **NEW: Dynamic content will be added programmatically here** -->
                        <!-- The showMultipleWordResults() method will add views here -->

                    </LinearLayout>

                    <!-- Word Not Found - Nice Error Message -->
                    <LinearLayout
                        android:id="@+id/wordNotFoundLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="32dp"
                        android:visibility="gone">

                        <!-- Icon -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”"
                            android:textSize="64sp"
                            android:layout_marginBottom="16dp" />

                        <!-- Selected Word Display -->
                        <TextView
                            android:id="@+id/notFoundWordText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="é¸æŠžã•ã‚ŒãŸå˜èªž"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/teal_700"
                            android:gravity="center"
                            android:layout_marginBottom="12dp" />

                        <!-- Not Found Message -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Word not found in dictionary"
                            android:textSize="18sp"
                            android:textColor="@android:color/darker_gray"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <!-- Suggestion Text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Try selecting individual characters or common word forms"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:gravity="center"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>