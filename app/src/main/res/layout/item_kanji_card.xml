<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Kanji Character (Left Side) -->
        <TextView
            android:id="@+id/kanjiCharacter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            android:background="@drawable/rounded_background"
            android:backgroundTint="#F5F5F5"
            tools:text="漢" />

        <!-- Kanji Information (Right Side) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Readings (Combined with semicolon) -->
            <TextView
                android:id="@+id/readings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="6dp"
                tools:text="カン、ケン; みる、みせる" />

            <!-- Meaning -->
            <TextView
                android:id="@+id/meaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Chinese character, kanji" />

        </LinearLayout>

        <!-- Confidence Badge (for drawing recognition) -->
        <TextView
            android:id="@+id/confidenceBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/circular_badge_background"
            android:backgroundTint="@color/teal_100"
            android:gravity="center"
            android:minWidth="36dp"
            android:minHeight="24dp"
            android:paddingHorizontal="8dp"
            android:textColor="@color/teal_700"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="85%"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.cardview.widget.CardView>