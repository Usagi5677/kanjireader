<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".DictionaryActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_500"
        android:elevation="4dp"
        app:title="Dictionary"
        app:titleTextColor="@color/toolbar_icon_text_color"
        app:subtitleTextColor="@color/subtitle_text_color"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/toolbar_icon_text_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search Container -->
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_500"
        android:paddingHorizontal="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/searchCardView"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/surface_color"
                    android:hint="Search..."
                    android:textSize="16sp"
                    android:textColor="@color/text_primary_color"
                    android:textColorHint="@color/text_secondary_color"
                    android:paddingStart="16dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:gravity="center_vertical|start"
                    android:inputType="text|textNoSuggestions|textMultiLine"
                    android:imeOptions="actionNone|flagNoEnterAction"
                    android:maxLines="4"
                    android:minLines="1"
                    android:lineSpacingMultiplier="1.0"
                    android:includeFontPadding="false"
                    android:importantForAutofill="no"
                    android:saveEnabled="false" />

                <ImageButton
                    android:id="@+id/clearButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_close"
                    app:tint="@color/text_secondary_color"
                    android:contentDescription="Clear search"
                    android:padding="6dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Button Container (Radical Search + Word Navigation) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Radical Search Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface_color">

                <TextView
                    android:id="@+id/radicalSearchButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="å­—"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/search_button_color"
                    android:background="@color/surface_color"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

            </androidx.cardview.widget.CardView>

            <!-- Word Navigation Button (appears when search bar expands) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/wordNavigationButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface_color">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_list"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    app:tint="@color/search_button_color"
                    android:background="@color/surface_color"
                    android:contentDescription="Navigate words" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>



    <!-- Results RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/resultsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/searchContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“š"
            android:textSize="64sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/searchPromptText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_the_dictionary"
            android:textSize="20sp"
            android:textColor="@color/text_primary_color"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_japanese_or_english"
            android:textSize="14sp"
            android:textColor="@color/text_secondary_color"
            android:gravity="center" />
        <TextView
            android:id="@+id/searchHelpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wildcard_tip"
            android:textSize="13sp"
            android:textColor="@color/teal_700"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="32dp"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

    <!-- No Results State -->
    <LinearLayout
        android:id="@+id/noResultsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”"
            android:textSize="64sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/noResultsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_results_found"
            android:textSize="18sp"
            android:textColor="@color/text_secondary_color"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/try_different_search"
            android:textSize="14sp"
            android:textColor="@color/text_secondary_color"
            android:gravity="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Add Navigation View -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>