<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/surface_color"
        android:elevation="2dp"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- Top: Scrollable Word Info Section (30%) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.3"
        android:background="@color/surface_color"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Main Word -->
            <TextView
                android:id="@+id/wordText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="見る"
                android:textSize="36sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/text_primary_color" />

            <!-- Reading -->
            <TextView
                android:id="@+id/readingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="みる"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/teal_900" />

            <!-- Pitch Accent Section (horizontal scrollable) -->
            <HorizontalScrollView
                android:id="@+id/pitchAccentScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:visibility="gone">
                
                <LinearLayout
                    android:id="@+id/pitchAccentContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:orientation="horizontal"
                    android:gravity="start" />
                    
            </HorizontalScrollView>

            <!-- JLPT Tag Chips (horizontal scrollable) -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/tagChipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    app:singleLine="true"
                    app:chipSpacing="8dp" />
                    
            </HorizontalScrollView>

            <!-- Grammar Tags (horizontal scrollable) -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/grammarChipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    app:singleLine="true"
                    app:chipSpacing="8dp" />
                    
            </HorizontalScrollView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Middle: Meanings/Variants Tabbed Section (25%) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:background="@color/surface_color">

        <!-- Middle Section Tab Layout -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/middleTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="fill" />

        <!-- Middle Section ViewPager -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/middleViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Bottom: Fixed Tabs Section (45%) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.2"
        android:orientation="vertical"
        android:background="@color/surface_color">

        <!-- Tab Layout -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="fill"
 />

        <!-- ViewPager for Tab Content -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>