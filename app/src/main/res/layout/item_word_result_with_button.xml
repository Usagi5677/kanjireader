<?xml version="1.0" encoding="utf-8"?>
<!-- Update item_word_result_with_button.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Word Information (takes most space) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Kanji Text -->
            <TextView
                android:id="@+id/kanjiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                android:layout_marginBottom="4dp"
                android:text="漢字" />

            <!-- Reading Text -->
            <TextView
                android:id="@+id/readingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_secondary_color"
                android:layout_marginBottom="6dp"
                android:text="かんじ" />

            <!-- Meaning Text -->
            <TextView
                android:id="@+id/meaningText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_primary_color"
                android:lineSpacingExtra="2dp"
                android:text="Chinese character, kanji" />

        </LinearLayout>

        <!-- Highlight Indicator (Visual feedback only) -->
        <View
            android:id="@+id/highlightIndicator"
            android:layout_width="6dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/highlight_indicator"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>