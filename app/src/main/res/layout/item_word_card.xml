<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="3dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface_color"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Overlay the highlight indicator at the left edge -->
    <View
        android:id="@+id/highlightIndicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        android:layout_gravity="start|center_vertical"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Word Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Word and Reading - Vertical Layout for Long Words -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/wordText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"
                    android:layout_marginBottom="2dp"
                    tools:text="見る" />

                <TextView
                    android:id="@+id/readingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary_color"
                    tools:text="みる" />

            </LinearLayout>

            <!-- Meanings -->
            <TextView
                android:id="@+id/meaningsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_primary_color"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                tools:text="to see, to watch, to look at" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>