<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme -->
    <style name="Theme.KanjiReader" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark mode primary colors -->
        <item name="colorPrimary">@color/teal_600</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_400</item>
        <item name="colorSecondaryVariant">@color/teal_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_800</item>
        <item name="colorOnSecondaryContainer">@color/teal_200</item>
        <!-- Status bar color - darker green for dark mode -->
        <item name="android:statusBarColor">@color/teal_800</item>
        <!-- Dark status bar icons for dark theme -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- Surface colors for dark mode -->
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#E0E0E0</item>
        <item name="colorOnSurfaceVariant">#BDBDBD</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">#121212</item>
        <item name="android:colorBackground">#121212</item>
        <item name="colorOnBackground">#E0E0E0</item>
        
        <!-- Card and elevated surface colors -->
        <item name="colorSurfaceVariant">#2C2C2C</item>
        <item name="colorOutline">#424242</item>
        
        <!-- Additional dark mode attributes -->
        <item name="android:textColorPrimary">#E0E0E0</item>
        <item name="android:textColorSecondary">#BDBDBD</item>
        <item name="android:textColorTertiary">#9E9E9E</item>

        <!-- Navigation drawer selected item colors -->
        <item name="navigationViewStyle">@style/NavigationViewStyle</item>
        
        <!-- Dark mode NavigationView background -->
        <item name="android:navigationBarColor">#121212</item>
    </style>

    <!-- Dark mode Navigation View Style -->
    <style name="NavigationViewStyle" parent="Widget.Material3.NavigationView">
        <item name="itemIconTint">@color/nav_item_tint</item>
        <item name="itemTextColor">@color/nav_item_tint</item>
        <item name="itemShapeFillColor">@color/nav_item_background</item>
        <item name="android:background">#1E1E1E</item>
    </style>
    
    <!-- Custom Tab Text Appearance -->
    <style name="TabTextAppearance" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">12sp</item>
    </style>
</resources>